<h4>List of Topics</h4>

<div class="row table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody class="hover-cursor">
            {{#each model as |topic|}}
                <tr>
                    <td>
                        {{topic.id}}
                    </td>
                    <td>
                        {{#link-to 'topic' topic}}
                            {{topic.title}}
                        {{/link-to}}
                    </td>
                    <td>
                        {{topic.author}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
